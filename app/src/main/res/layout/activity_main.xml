<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="430dp"
    android:layout_height="932dp"
    android:background="@drawable/mainpageshape"
    >

    <FrameLayout
        android:id="@+id/flMountAndes"
        android:layout_width="560dp"
        android:layout_height="620dp"
        android:layout_marginTop="-18dp"
        android:layout_marginStart="-61dp">

        <ImageView
            android:id="@+id/ivMountAndes"
            android:layout_width="374dp"
            android:layout_height="460dp"
            android:layout_marginStart="89dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="97dp"
            android:layout_marginBottom="114dp"
            android:background="@drawable/mount_andes"/>

        <FrameLayout
            android:id="@+id/flInfo"
            android:layout_width="331dp"
            android:layout_height="104dp"
            android:layout_marginTop="373dp"
            android:layout_marginStart="110dp"
            android:background="@drawable/rectangle_32">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginTop="18dp"
                android:layout_marginStart="15dp"
                android:text="@string/andes_mountains"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:fontFamily="@font/inter_font"
                android:lineHeight="29.05dp"/>

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="26dp"
                android:layout_marginStart="272dp"
                android:text="@string/price"
                android:lineHeight="18.75dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="@font/roboto"
                />
            
            <ImageView
                android:id="@+id/ivLocationIcon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="64dp"
                android:layout_marginStart="14dp"
                android:src="@drawable/location_icon"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_marginStart="42dp"
                android:layout_marginTop="65dp"
                android:fontFamily="@font/roboto"
                android:textSize="18sp"
                android:lineHeight="21.09dp"
                android:text="@string/South_America"
                android:textColor="@color/white" />
            
            <TextView
                android:id="@+id/tvRealPrice"
                android:layout_width="56dp"
                android:layout_height="30dp"
                android:layout_marginTop="58dp"
                android:layout_marginStart="254dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:lineHeight="23.44dp"
                android:text="@string/real_price"/>

        </FrameLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/ivBackArrow"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="46dp"
        android:layout_marginStart="49dp"
        android:background="@drawable/elipse_9"
        android:paddingLeft="10dp"
        android:scaleType="center"
        android:src="@drawable/icon_arrow_left" />

    <ImageView
        android:id="@+id/ivArchiveIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginTop="46dp"
        android:layout_marginStart="339dp"
        android:background="@drawable/elipse_9"
        android:scaleType="center"
        android:src="@drawable/archive_icon" />

    <LinearLayout
        android:id="@+id/llOverviewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="528dp">
        
        <TextView
            android:id="@+id/tvOverview"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="28dp"
            android:text="@string/overview"
            android:fontFamily="@font/inter_font"
            android:textSize="22dp"/>

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="54dp"
            android:layout_height="19dp"
            android:layout_marginBottom="0dp"
            android:layout_marginStart="32dp"
            android:fontFamily="@font/inter_font"
            android:textSize="16sp"
            android:text="@string/details"
            android:textColor="@color/dark_gray"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llHoursAndGrade"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="587dp"
        android:layout_marginStart="0dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/rectangle_83"
            android:src="@drawable/icon_cloud"
            android:paddingLeft="2dp"/>

        <TextView
            android:id="@+id/tvHours"
            android:layout_width="61dp"
            android:layout_height="21dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="0dp"
            android:text="@string/eight_hours"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:lineHeight="21.09dp"/>

        <ImageView
            android:id="@+id/ivCloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangle_83"
            android:src="@drawable/icon_cloud"
            android:paddingLeft="2dp"/>

        <TextView
            android:id="@+id/tvGradus"
            android:layout_width="40dp"
            android:layout_height="23dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="0dp"
            android:text="@string/gradus"
            android:fontFamily="@font/roboto"
            android:textSize="20sp"
            android:lineHeight="23.44dp"/>

        <ImageView
            android:id="@+id/ivStar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginStart="60dp"
            android:background="@drawable/rectangle_83"
            android:src="@drawable/icon_star"
            android:paddingLeft="2dp"/>

        <TextView
            android:id="@+id/tvPoints"
            android:layout_width="26dp"
            android:layout_height="21dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="0dp"
            android:text="@string/grade"
            android:fontFamily="@font/roboto"
            android:textSize="18sp"
            android:lineHeight="21.09dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="374dp"
        android:layout_height="135dp"
        android:layout_marginTop="655dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        android:lineHeight="27.03dp"
        android:text="@string/info"
        android:textColor="@color/dark_gray_transparent"/>

    <FrameLayout
        android:id="@+id/flBookNow"
        android:layout_width="373dp"
        android:layout_height="66dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="810dp"
        android:background="@drawable/rectangle_77">

        <TextView
            android:id="@+id/tvBooking"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginTop="22dp"
            android:layout_marginStart="118dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/book_now"
            android:fontFamily="@font/roboto"/>

        <ImageView
            android:id="@+id/ivSendIcon"
            android:layout_width="23dp"
            android:layout_height="23.01dp"
            android:layout_marginTop="21dp"
            android:layout_marginStart="230dp"
            android:background="@drawable/send_icon"
            android:rotation="-45"/>

    </FrameLayout>


</FrameLayout>